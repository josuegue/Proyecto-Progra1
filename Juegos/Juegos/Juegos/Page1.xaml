<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Juegos.Page1"
             Title="Ejercicio 1">
             
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="Center"> 
            <Label x:Name="Pagina1"
                Text="¡HOLA, QUE GUSTO! &#10;Adivino el numero que estas pensando. &#10; Primero Multiplicalo por 2.&#10; ¡Pilas con las matematicas!&#10; Sumale 8 al resultado anterior.&#10;Y por ultimo multiplicalo por 5."
                TextColor="Aqua"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Ingrese el resultado"
                   TextColor="WhiteSmoke"
                   x:Name="ingreso"
                   Keyboard="Numeric"/>
            <Button Text="Preciona para adivinar el número."
                    Clicked="Button_Clicked"
                    TextColor="WhiteSmoke"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>